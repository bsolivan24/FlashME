<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.flashme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.flashme.MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen" android:screenOrientation="unspecified">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
	        android:name="com.example.flashme.CardActivity"
	        android:label="@string/cardtitle"
	        android:parentActivityName="com.example.flashme.MainActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" android:screenOrientation="unspecified">
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.example.flashme.MainActivity" />
    	</activity>
        <activity
	        android:name="com.example.flashme.MenuActivity"
	        android:label="@string/menutitle"
	        android:parentActivityName="com.example.flashme.MainActivity" android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" android:screenOrientation="unspecified">
	        <meta-data
	            android:name="android.support.PARENT_ACTIVITY"
	            android:value="com.example.flashme.MainActivity" />
    	</activity>
    </application>

</manifest>
